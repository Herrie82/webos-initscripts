[Manager]
DefaultEnvironment=SURFACE_MANAGER_PLATFORM=eglfs

DefaultEnvironment=QT_IM_MODULE=none
# Define the compositor extensions that will be loaded
DefaultEnvironment=WEBOS_COMPOSITOR_EXTENSIONS=webos-extension
# Define the permanent storage path to store snapshot images
DefaultEnvironment=WEBOS_SNAPSHOT_BACKUP_PATH=/var/lib/surface-manager/snapshots
# Set atlas texture size to 4MB (1024 * 1024 * 4)
DefaultEnvironment=QSG_ATLAS_WIDTH=512 QSG_ATLAS_HEIGHT=512
# Avoid waiting for coalescing touch events in QQuickWindow
DefaultEnvironment=QML_NO_TOUCH_COMPRESSION=1
# Support webos keymap
DefaultEnvironment=QT_QPA_EVDEV_KEYBOARD_PARAMETERS=keymap=/usr/share/webos-keymap/webos-keymap.qmap
# Uncomment to enable debug console
# Environment=LSM_DEV_MODE=1
# Compositor geometry
DefaultEnvironment=WEBOS_COMPOSITOR_WIDTH=1920
DefaultEnvironment=WEBOS_COMPOSITOR_HEIGHT=1080
DefaultEnvironment=WEBOS_COMPOSITOR_X=0
DefaultEnvironment=WEBOS_COMPOSITOR_Y=0
DefaultEnvironment=WEBOS_COMPOSITOR_ROTATION=0
DefaultEnvironment=WEBOS_DEVICE_PIXEL_RATIO=auto
